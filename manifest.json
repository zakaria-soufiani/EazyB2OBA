{
    "manifest_version": 2,
    "name": "Booba Mode",
    "description": "Booba background",
    "version": "1.0",
    "browser_action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "favicon",
        "48": "icon-48-mdpi",
        "128": "icon-128"
    },
    "permissions": [
        "tabs", "http://*/*", "https://*/*"
    ],
    "content_scripts": [{
        "js": ["popup.js"],
        "matches": ["<all_urls>"]
    }]
}
